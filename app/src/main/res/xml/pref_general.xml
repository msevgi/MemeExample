<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <PreferenceCategory
            android:title="@string/pref_header_general">
    
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="640x480"
        android:entries="@array/pref_resolutions_titles"
        android:entryValues="@array/pref_resolutions"
        android:key="image_resolutions"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_image_resolution" 
        android:description="@string/pref_description_image_resolution" />
    
    <ListPreference
        android:defaultValue="640x480"
        android:entries="@array/pref_resolutions_titles"
        android:entryValues="@array/pref_resolutions"
        android:key="video_resolutions"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_gif_resolution" 
        android:description="@string/pref_description_gif_resolution" />
    
    <ListPreference
        android:defaultValue="Native"
        android:entries="@array/pref_frames_per_second_titles"
        android:entryValues="@array/pref_frames_per_second"
        android:key="fps"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_frames_per_second" 
        android:description="@string/pref_description_frames_per_second" />
</PreferenceCategory>
</PreferenceScreen>