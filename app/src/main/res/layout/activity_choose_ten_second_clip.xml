<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grey_noise"
    tools:context=".ChooseTenSecondClip">
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:layout_marginBottom="30dp" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:layout_height="4dp" />

     <ImageView
         android:id="@+id/videoView1"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/progressBar1"
         android:layout_centerHorizontal="true"
         android:contentDescription="@string/descript_gallery_choose_clip"
         android:clickable="true" />

         </RelativeLayout>

    <us.sigsegv.android.maximumultimatememecreatorxturbo.Gallery
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="75">
        <LinearLayout
            android:id="@+id/imageHolder1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal" />
            
     </us.sigsegv.android.maximumultimatememecreatorxturbo.Gallery>

   
</LinearLayout>